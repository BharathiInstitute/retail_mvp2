rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Product images - main and thumbnails
    match /stores/{storeId}/products/{sku}/{imageFile} {
      allow read: if true;
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024;
    }
    
    // Print Helper downloads - anyone can read, only admins can upload
    match /downloads/print-helper/{fileName} {
      allow read: if true;
      // Only authenticated users with admin permissions can upload
      // (Note: Storage rules can't check Firestore permissions directly,
      //  so we rely on the app-level permission check + auth requirement)
      allow write: if request.auth != null
        && request.resource.size < 100 * 1024 * 1024; // Max 100MB for installer
    }
    
    // Default: allow reads everywhere, writes for authenticated users
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
